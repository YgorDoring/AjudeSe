<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary700"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ui.viewmodel.ImcActivity">

        <ImageView
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ajudese_logo_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/radius_sugestions"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp">

            <TextView
                style="@style/TextViewForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="@string/imc_desc" />

            <EditText
                android:id="@+id/edit_imc_weight"
                style="@style/EditTextArea"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_icon_fitness"
                android:drawablePadding="8dp"
                android:hint="@string/weight"
                android:inputType="number"
                android:maxLength="3" />

            <EditText
                android:id="@+id/edit_imc_height"
                style="@style/EditTextArea"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_icon_height"
                android:drawablePadding="8dp"
                android:hint="@string/height"
                android:inputType="number"
                android:maxLength="3" />

            <Button
                android:id="@+id/btn_imc_send"
                style="@style/ButtonForm"
                android:background="@drawable/bg_gradient_button"
                android:text="@string/calc" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/my_toolbar"
                style="@style/EditTextArea"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:elevation="1dp"
                app:titleTextColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>